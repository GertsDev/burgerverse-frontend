{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "types": ["node", "jest"],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@app": ["app/index.ts"],
      "@api/*": ["shared/api/*"],
      "@components/*": ["components/*"],
      "@components": ["components/index.ts"],
      "@ui/*": ["shared/ui/*"],
      "@ui": ["shared/ui/index.ts"],
      "@pages/*": ["pages/*"],
      "@pages": ["pages/index.ts"],
      "@images/*": ["images/*"],
      "@slices/*": ["services/slices/*"],
      "@selectors/*": ["services/selectors/*"],
      "@utils-types": ["shared/utils/types.ts"],
      "@utils-cookie": ["shared/utils/cookie.ts"],
      "@redux-store": ["services/store.ts"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["shared/utils/*"]
    }
  },
  "include": ["src", "src/components/order-details"]
}
